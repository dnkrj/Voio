<% include head %>
<% include title %>
		<div id="container">
			<h1><a href="/u/<%= userpage %>"><%= userpage %></a></h1>
			<div class="gif <% if(!isOwner){%>regif<%}%>" id="<%= gifview %>" style="">
				<a href="/u/<%= userpage %>">
					<video width='300' height='300' loop webkit-playsinline><source src="/user/<%= userpage %>/a/<%= gifview %>.mp4" type='video/mp4'></video>
				</a>
				<% if(!isOwner && typeof user !== 'undefined'){%>
					<a id="reblog" href="#">
						<div class='gifButton'>Reblog Gif</div>
					</a>
				<% } %>
			</div>
			<p><a href="/u/<%= userpage %>">all clips uploaded by <%= userpage %></a></p>
		</div>
	</body>
	<script type="text/javascript">
		$('video').hover(function(){
        	this.play();
    	},function(){
    	    this.pause()
    	});
    	$('#reblog').click(function(e){
    		$.get('/reblog?gif=<%= gifview %>&op=<%= userpage %>');
    		//$.get('/reblog?gif=<%= gifview %>');
    		$("#reblog").replaceWith("<div class='gifButton'>reblogged</div>");
    		e.preventDefault();
    	});
	</script>
</html>